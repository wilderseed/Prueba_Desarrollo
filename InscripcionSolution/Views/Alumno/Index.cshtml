@model IEnumerable<InscripcionSolution.Models.Estudiante>

@{
    ViewBag.Title = "Listar Alumnos";
    
}

<h2>Lista de Alumnos</h2>

<p>
    @Html.ActionLink("Crear Nuevo Alumno", "Create")
</p>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Nombre*@ @*Muestra los nombres de las columnas de la clase parcial definidas*@
                Nombre Completo
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Edad)*@
                Edad
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Sexo)*@
                Sexo
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.FechaNacimiento)*@
                Fecha de Nacimiento
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreCompleto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Edad)
                </td>
                <td>
                    @{
                        if (item.Sexo == "M")
                        {
                            <span>Masculino</span>

                        }
                        else
                        {
                            <span>Femenino</span>
                        }

                    }

                </td>
                <td>
                    @item.FechaNacimiento.ToShortDateString();
                </td>
                <td>
                    @Html.ActionLink("Editar", "Editar", new { id = item.Id }) |
                    @Html.ActionLink("Detalles", "Detalles", new { id = item.Id }) |
                    @Html.ActionLink("Eliminar", "Eliminar", new { id = item.Id }, new { @class = "aElimina" })
                </td>
            </tr>
          }
    </tbody>

</table>

@*Seccion, codigo y Script para preguntar si se desea eliminar un registro de la bd*@
@section scripts{
    <script>
        $(".aElimina").click(function (event) {
            if (!confirm('Estas Seguro de Eliminar el Alumno??')) {
                event.preventDefault();
            }

        });
    </script>
    
}
